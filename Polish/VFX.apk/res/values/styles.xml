<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="action_bar_style" parent="@android:style/Widget.ActionBar">
        <item name="android:background">@drawable/action_bar_bg_light</item>
        <item name="android:paddingLeft">0.0dip</item>
        <item name="android:paddingRight">0.0dip</item>
        <item name="android:paddingBottom">0.0dip</item>
        <item name="android:divider">@null</item>
        <item name="android:height">?android:actionBarSize</item>
        <item name="android:displayOptions">homeAsUp|showTitle</item>
        <item name="android:titleTextStyle">@style/TextAppearance.WindowTitle</item>
        <item name="android:itemPadding">20.0dip</item>
        <item name="android:backgroundStacked">@drawable/action_bar_stack_bg_light</item>
        <item name="android:backgroundSplit">@drawable/action_bar_split_bg_light</item>
        <item name="com.miui.sdk:tabIndicator">@null</item>
        <item name="com.miui.sdk:translucentTabIndicator">true</item>
        <item name="com.miui.sdk:textColorChecked">@drawable/action_bar_embeded_tabs_bg_light</item>
        <item name="com.miui.sdk:textColorBlankPage">@drawable/action_bar_title_stack_bg_light</item>
    </style>
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:colorForeground">@color/bright_foreground_light</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:disabledAlpha">0.5</item>
        <item name="android:textColorSecondary">@color/secondary_text_holo_light</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.Large</item>
        <item name="android:textAppearanceSmall">@style/TextAppearance.Small</item>
        <item name="android:textAppearanceMediumInverse">@style/TextAppearance.Large</item>
        <item name="android:textAppearanceSmallInverse">@style/TextAppearance.Small</item>
        <item name="android:listPreferredItemHeight">61.0dip</item>
        <item name="android:windowBackground">@drawable/window_bg_light</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:alertDialogStyle">@style/AlertDialog.Holo.Light</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/scrollbar_thumb_horizontal_light</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_thumb_vertical_light</item>
        <item name="android:listViewStyle">@style/MyListViewStyle</item>
        <item name="android:scrollViewStyle">@style/MyScrollViewStyle</item>
        <item name="android:listSeparatorTextViewStyle">@style/Widget.Holo.Light.TextView.ListSeparator</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:listChoiceIndicatorSingle">@drawable/btn_radio_holo_light</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/btn_check_holo_light</item>
        <item name="android:actionBarStyle">@style/action_bar_style</item>
        <item name="android:actionOverflowButtonStyle">@style/Widget.Holo.Light.ActionButton.Overflow</item>
        <item name="android:popupMenuStyle">@style/Widget.PopupMenu</item>
        <item name="android:dialogTheme">@style/Theme.Holo.Light.Dialog</item>
        <item name="android:alertDialogTheme">@style/Theme.Holo.Light.Dialog.Alert</item>
        <item name="android:selectableItemBackground">@drawable/item_background_holo_light</item>
        <item name="android:listPreferredItemPaddingLeft">0.0dip</item>
        <item name="android:listPreferredItemPaddingRight">0.0dip</item>
        <item name="android:dialogTitleIconsDecorLayout">@layout/dialog_title_icons_holo</item>
        <item name="android:dialogCustomTitleDecorLayout">@layout/dialog_custom_title_holo</item>
        <item name="android:dialogTitleDecorLayout">@layout/dialog_title_holo</item>
    </style>
    <style name="TextAppearance.WindowTitle" parent="@android:style/TextAppearance">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/action_bar_title_text_light</item>
    </style>
    <style name="Widget.Holo.ListView.DropDown" parent="@android:style/Widget.Holo.ListView">
        <item name="android:textAppearance">@style/TextAppearance.Large</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginLeft">200.0dip</item>
        <item name="android:layout_marginRight">25.0dip</item>
    </style>
    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
    <style name="Theme.Holo.Light.Dialog" parent="@style/AppTheme">
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Light</item>
        <item name="android:textAppearanceInverse">@android:style/TextAppearance.Holo.Light.Inverse</item>
        <item name="android:windowBackground">@android:drawable/dialog_full_holo_light</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle.Holo.Light</item>
        <item name="android:windowAnimationStyle">@style/PauseDialogAnimation</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowActionModeOverlay">false</item>
        <item name="android:selectableItemBackground">@drawable/item_background_holo_lightv6</item>
        <item name="android:borderlessButtonStyle">@android:style/Widget.Holo.Light.Button.Borderless.Small</item>
        <item name="android:buttonBarStyle">@android:style/Holo.Light.ButtonBar.AlertDialog</item>
        <item name="android:windowCloseOnTouchOutside">@android:bool/config_closeDialogWhenTouchOutside</item>
        <item name="android:listPreferredItemPaddingLeft">16.0dip</item>
        <item name="android:listPreferredItemPaddingRight">16.0dip</item>
    </style>
    <style name="AlertDialog.Holo.Light" parent="@android:style/AlertDialog">
        <item name="android:windowAnimationStyle">@style/PauseDialogAnimation</item>
        <item name="android:fullDark">@android:drawable/dialog_full_holo_light</item>
        <item name="android:topDark">@drawable/window_bg_light</item>
        <item name="android:centerDark">@drawable/window_bg_light</item>
        <item name="android:bottomDark">@drawable/action_mode_bg_dialog_light</item>
        <item name="android:fullBright">@android:drawable/dialog_full_holo_light</item>
        <item name="android:topBright">@drawable/window_bg_light</item>
        <item name="android:centerBright">@drawable/window_bg_light</item>
        <item name="android:bottomBright">@drawable/action_mode_bg_dialog_light</item>
        <item name="android:bottomMedium">@drawable/action_mode_bg_dialog_light</item>
        <item name="android:centerMedium">@drawable/window_bg_light</item>
        <item name="android:layout">@layout/alert_dialog_holo</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:selectableItemBackground">@drawable/item_background_holo_lightv6</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:listLayout">@layout/select_dialog_holo</item>
        <item name="android:multiChoiceItemLayout">@android:layout/select_dialog_multichoice_holo</item>
        <item name="android:singleChoiceItemLayout">@layout/select_dialog_singlechoice_holo</item>
        <item name="android:listItemLayout">@android:layout/select_dialog_item_holo</item>
        <item name="android:progressLayout">@android:layout/progress_dialog_holo</item>
        <item name="android:horizontalProgressLayout">@android:layout/alert_dialog_progress_holo</item>
    </style>
    <style name="Theme.Holo.Light.Dialog.Alert" parent="@style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle.Holo.Light</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">100.0%</item>
    </style>
    <style name="DialogWindowTitle.Holo.Light" parent="@android:style/TextAppearance.Holo.Light">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
    </style>
    <style name="TextAppearance.Large" parent="@android:style/TextAppearance">
        <item name="android:textSize">15.0sp</item>
    </style>
    <style name="TextAppearance.Small" parent="@android:style/TextAppearance">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">@color/test</item>
    </style>
    <style name="MyListViewStyle" parent="@android:style/Widget.ListView">
        <item name="android:paddingLeft">20.0dip</item>
        <item name="android:paddingRight">20.0dip</item>
        <item name="android:listSelector">@drawable/list_selector_background</item>
        <item name="android:divider">@color/div</item>
        <item name="android:dividerHeight">1.0px</item>
        <item name="android:overScrollMode">never</item>
    </style>
    <style name="MyScrollViewStyle" parent="@android:style/Widget.ScrollView">
        <item name="android:overScrollMode">never</item>
    </style>
    <style name="Widget.Holo.Light.TextView.ListSeparator" parent="@android:style/Widget.TextView.ListSeparator">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/test</item>
        <item name="android:background">@drawable/list_section_divider_holo_light</item>
        <item name="android:paddingTop">10.0dip</item>
        <item name="android:paddingBottom">5.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="Widget.Holo.Light.ActionButton.Overflow" parent="@android:style/Widget.Holo.Light.ActionButton">
        <item name="android:src">@drawable/ic_menu_moreoverflow_holo_light</item>
    </style>
    <style name="Widget.PopupMenu" parent="@android:style/Widget.Holo.Light.PopupMenu">
        <item name="android:dropDownSelector">@null</item>
        <item name="android:popupBackground">@drawable/action_bar_bg_light</item>
        <item name="android:dropDownWidth">fill_parent</item>
        <item name="android:dropDownHorizontalOffset">10.0dip</item>
        <item name="android:dropDownVerticalOffset">0.0dip</item>
    </style>
</resources>
